<Window x:Class="drawing_app.ImportBrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Brush"
        Height="500"
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Border Margin="20"
            Background="White"
            Padding="20"
            CornerRadius="8"
            BorderBrush="#DDD"
            BorderThickness="1">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Import Custom Brush"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <TextBlock Text="Brush Name" FontWeight="SemiBold"/>
                    <TextBox x:Name="NameBox" Margin="0,5,0,15" Height="28"/>

                    <TextBlock Text="Thickness" FontWeight="SemiBold"/>
                    <Slider x:Name="SizeSlider" Minimum="1" Maximum="100" Value="10" Margin="0,5,0,15"/>

                    <TextBlock Text="Opacity" FontWeight="SemiBold"/>
                    <Slider x:Name="OpacitySlider" Minimum="1" Maximum="255" Value="255" Margin="0,5,0,15"/>

                    <TextBlock Text="Spacing" FontWeight="SemiBold"/>
                    <Slider x:Name="SpacingSlider" Minimum="0.05" Maximum="1" Value="0.25" Margin="0,5,0,15"/>

                    <Button Content="Choose Brush Image"
                            Width="180"
                            Height="32"
                            Click="OnChooseImage"/>

                </StackPanel>

                <Border Grid.Column="1"
                        Background="#FAFAFA"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">

                    <StackPanel HorizontalAlignment="Center">

                        <TextBlock Text="Preview"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <Image x:Name="PreviewImage"
                               Height="150"
                               Width="150"
                               Stretch="Uniform"/>

                    </StackPanel>

                </Border>

            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="OnCancel"/>

                <Button Content="Save"
                        Width="90"
                        Height="32"
                        Background="#0078D4"
                        Foreground="White"
                        BorderBrush="#0078D4"
                        Click="OnSave"/>

            </StackPanel>

        </Grid>
    </Border>
</Window>
