<Window x:Class="drawing_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drawing_app"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
       
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="200" Background="LightPink">
            <Button Content="Undo" Click="Undo_Click" Width="60" Margin="5"/>
            <Button Content="Redo" Click="Redo_Click" Width="60" Margin="5"/>
        </StackPanel>

      
        <Border BorderBrush="Black" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="1200" Height="800" Background="White">
            <local:CanvasControl x:Name="DrawingCanvas"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>
