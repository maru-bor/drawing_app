<Window x:Class="drawing_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:drawing_app"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
       
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="200" Background="LightPink">
            <Button Content="Undo" Click="Undo_Click" Width="60" Margin="5"/>
            <Button Content="Redo" Click="Redo_Click" Width="60" Margin="5"/>
            
            <TextBlock Text="Thickness:" VerticalAlignment="Center" Margin="5,0"/>
            <Slider x:Name="ThicknessSlider" Minimum="1" Maximum="50" Value="4" Width="150" Margin="5" ValueChanged="ThicknessSlider_ValueChanged"/>
        
           
            <TextBlock Text="Opacity:" VerticalAlignment="Center" Margin="5,0"/>
            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="255" Value="255" Width="150" Margin="5" ValueChanged="OpacitySlider_ValueChanged"/>
            
            <xctk:ColorPicker
                Width="150"
                Height="30"
                SelectedColorChanged="ColorPicker_SelectedColorChanged"/>
        </StackPanel>

      
        <Border BorderBrush="Black" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="1200" Height="800" Background="White">
            <local:CanvasControl x:Name="DrawingCanvas"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"/>
        </Border>
        <DockPanel>

            <TextBlock Text="Layers"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       DockPanel.Dock="Top"/>

            <!-- Layer list -->
            <ListBox x:Name="LayerList"
                     SelectionChanged="LayerList_SelectionChanged"
                     DisplayMemberPath="Name"
                     Height="300"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        DockPanel.Dock="Bottom">

                <Button Content="＋"
                        Width="40"
                        Margin="5"
                        Click="AddLayer_Click"/>

                <Button Content="🗑"
                        Width="40"
                        Margin="5"
                        Click="DeleteLayer_Click"/>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
